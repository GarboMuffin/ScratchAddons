{
  "name": "Onion skinning",
  "description": "Shows transparent overlays of previous or next costumes when editing a costume. Controlled by buttons under the editor by the zoom buttons.",
  "credits": [
    {
      "name": "GarboMuffin"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "userstyles": [
    {
      "url": "userscript.css",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "settings": [
    {
      "id": "default",
      "name": "Enable by default",
      "type": "boolean",
      "default": false
    },
    {
      "id": "previous",
      "name": "Default previous costumes",
      "type": "positive_integer",
      "default": 1
    },
    {
      "id": "next",
      "name": "Default next costumes",
      "type": "positive_integer",
      "default": 0
    },
    {
      "id": "opacity0",
      "name": "Default opacity 1 (%)",
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 25
    },
    {
      "id": "opacity1",
      "name": "Default opacity 2 (%)",
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 15
    },
    {
      "id": "opacity2",
      "name": "Default opacity 3 (%)",
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 5
    }
  ],
  "tags": ["editor", "beta"],
  "enabledByDefault": false,
  "l10n": true
}
